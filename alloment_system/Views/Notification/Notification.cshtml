@model IEnumerable<alloment_system.DBModel.Notify>

@{
    ViewBag.Title = "Notification";
}


    <body style="background-image: url('../../images/pro.jpg'); background-size: auto; background-repeat: no-repeat; color: white">
        <div class="container body-content">
            <h2>Notification</h2>

            <p>
                <br><br>
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.User)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Message)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.User)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Message)
                        </td>
                        <td>
                            <br><br>
                        </td>
                    </tr>
                }

            </table>

        </div>
    </body>
