
@model IEnumerable<alloment_system.DBModel.Branches>


@{
    ViewBag.Title = "About";
}



<body style="background-image: url('../../images/about.jpg'); background-size: 100%; background-repeat: no-repeat; color: white;">
    <div class="container body-content">
        <br><br><br><br><br><br><br><br><br>
        <h1 style="text-align: center">Allotmenteers</h1> <br>
        <h3 style="text-align: center">@ViewBag.Message</h3>

        <p style="font-size: 22px; text-align: center">
            As the largest​ healthcare system in World and one of the largest in the United States,
            Allotmenteers was born from the 1899 combination of Baylor Health Care and
            Allotmenteers Healthcare. Today we reach, 52 hospitals, more than 800 patient care
            sites, more than 7,300 active physicians, over 49,000 employees and the Scott Plan.
            Our goal is to develop, share and produce medical equipments to create a good life for humanbeing.
        </p>


        <h1 style="text-align: center">Our Branches</h1>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BranchName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BranchManager)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BranchAddress)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BranchName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BranchManager)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BranchAddress)
                    </td>
                </tr>
            }

        </table>


        <br><br><br><br><br><br><br><br><br><br><br><br><br><br>
    </div>

</body>